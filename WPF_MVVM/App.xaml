<Application x:Class="WPF_MVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_MVVM.Views"
             xmlns:local1="clr-namespace:WPF_MVVM.ViewModels">
    <Application.Resources>        
        <DataTemplate DataType="{x:Type local1:LogInViewModel}">
            <local:LogInView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local1:UserViewModel}">
            <local:UserView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local1:WarehouseManagerViewModel}">
            <local:WarehouseManagerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local1:CreateContractViewModel}">
            <local:CreateContractView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local1:UpdateOrderViewModel}">
            <local:UpdateOrderView />
        </DataTemplate>
    </Application.Resources>
</Application>
